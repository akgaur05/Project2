            <div class="column">
              <div class="step step-grey"></div>
            </div>
            <div class="column">
              <div class="step step-grey"></div>
            </div>
            <div class="column">
              <div class="step step-grey"></div>
            </div>
            <div class="column">
              <div class="step step-grey"></div>
            </div>
          </div>
